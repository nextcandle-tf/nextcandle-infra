# =============================================================================
# Docker Swarm Secrets Configuration
# =============================================================================
# 이 파일은 자동 생성됩니다. start.sh 실행 시:
#   - secrets.yml 없으면 → 랜덤 비밀번호로 자동 생성
#   - 수동 설정 필요 시 → cp secrets.yml.example secrets.yml
#
# 주의: secrets.yml은 절대 git에 커밋하지 마세요!
# 참고: Cloudflare Tunnel 토큰은 .env에서 관리합니다.
# =============================================================================

# ---------------------------------------------------------------------------
# PostgreSQL (환경별)
# ---------------------------------------------------------------------------
postgres:
  dev:
    db: nextcandle_dev
    user: dev_user
    password: ""
  stg:
    db: nextcandle_stg
    user: stg_user
    password: ""
  prod:
    db: nextcandle_prod
    user: prod_user
    password: ""

# ---------------------------------------------------------------------------
# Redis (환경별)
# ---------------------------------------------------------------------------
redis:
  dev:
    user: redis_dev_user
    password: ""
  stg:
    user: redis_stg_user
    password: ""
  prod:
    user: redis_prod_user
    password: ""

# ---------------------------------------------------------------------------
# MinIO
# ---------------------------------------------------------------------------
minio:
  root_user: minioadmin
  root_password: ""

# ---------------------------------------------------------------------------
# Grafana
# ---------------------------------------------------------------------------
grafana:
  admin_user: admin
  admin_password: ""

# ---------------------------------------------------------------------------
# n8n (공유)
# ---------------------------------------------------------------------------
n8n:
  user: admin
  password: ""

# ---------------------------------------------------------------------------
# Traefik Dashboard
# ---------------------------------------------------------------------------
traefik:
  dashboard_user: admin
  dashboard_password: ""  # htpasswd 형식: htpasswd -nb admin <password>
